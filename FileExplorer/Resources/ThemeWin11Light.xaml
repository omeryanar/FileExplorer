<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <DataTemplate x:Key="{dxt:LWKey DXTabItem.SelectedBackground}">
        <dxi:TabBorder ViewInfo="{Binding}" BackgroundMode="BorderBackground" BorderMode="BorderBrush"
                       BorderThickness="1,1,1,0" BorderMargin="0,-1,1,-1" HoldBorderThickness="2" HoldBorderMargin="0,0,2,2"
                       BorderCornerRadius="4,4,0,0" HoldBorderCornerRadius="4"
                       BorderBrush="{LWThemeValue Brush.PanelBorder}"
                       BorderBackground="{LWThemeValue Brush.FlyoutBackground}" />
    </DataTemplate>

</ResourceDictionary>